<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TextBold" parent="android:Widget.TextView">
        <item name="fontPath">fonts/circular-book.ttf</item>
    </style>

    <style name="TextRegular" parent="android:Widget.TextView">
        <item name="fontPath">fonts/circular-light.ttf</item>
    </style>

    <style name="TittleCollapsingToolbar" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
